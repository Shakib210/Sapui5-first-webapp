<c:FragmentDefinition
	xmlns="sap.m"
	xmlns:c="sap.ui.core"
>
	<Dialog
		id="helloDialog"
		title="Hello {/recipient/name}"
	>

	<c:Icon 
	src="sap-icon://hello-world"
	size='8rem'
	/>
		<beginButton>
			<Button
				text="{i18n>dialogCloseButtonText}"
				press=".onCloseDialog"
			/>
		</beginButton>
	</Dialog>
</c:FragmentDefinition>